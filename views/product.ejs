<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8" />
  <title><%= product ? product.name : 'Product' %> - Details</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
<main>
  <%- include('partials/navigation', { menuLinks: menuLinks, activeLinkPath:
  activeLinkPath, cartCount: cartCount }); %>
  <% if (product) { %>
    <h1 class="product__title"><%= product.name %></h1>
    <div class="product__description"><%= product.description %></div>
    <p class="product__price"><%= product.price %></p>
    <button class="product__button product__button--add" onclick="addToCart('<%= product.name %>')">Add to Cart</button>
    <button class="product__button product__button--delete" onclick="deleteProduct('<%= product.name %>')">Delete</button>
  <% } else { %>
    <p>No product found.</p>
  <% } %>
</main>
<script>
  function deleteProduct(name) {
    if (!confirm(`Are you sure you want to remove ${name}?`)) {
      return;
    }

    fetch(`/products/${name}`, {
      method: "DELETE",
    }).then((response) => {
      if (response.ok) {
        window.location.href = "/products";
      } else {
        alert("Error while removing product.");
      }
    });
  }

  function addToCart(productName) {
    fetch('/cart/add', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/x-www-form-urlencoded'
      },
      body: `name=${productName}`
    }).then(response => {
      if (response.ok) {
        window.location.reload();
      } else {
        alert('Error while adding product to cart.');
      }
    });
  }
</script>
</body>
</html>